---
layout: 'default'
---

<ul class="index">
	<% for post in @getCollection('posts').sortArray(date: -1): %>
	<li>
	  <h3>
        <% if post.link: %>
        <a href="<%= post.link %>"><%- post.title or post.name %></a>
        <% else: %>
        <a href="<%= post.url %>"><%- post.title or post.name %></a>
        <% end %>
      </h3>
	  <%- post.description %>
	</li>
	<% end %>
</ul>
